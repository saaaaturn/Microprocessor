;TAO XUNG CO F= 1KHZ, DO RONG XUNG 50% 1KHZ -> 1ms => muc cao = muc thap = 0.5ms = 500us
ORG 0000H
	MAIN:
	MOV TMOD, #01H	;SET CHE DO 1
	LOOP:
	CPL P3.0 		;DAO GIA TRI BIT P3.0
	ACALL DELAY
	JMP LOOP
	DELAY:
	MOV TH0, #0FEH	;65536'2^16' - 500us --> TIMER DEM 500 LAN--> TRAN'
	MOV TL0, #0CH
	SETB TR0		;CHO TIMER HOAT DONG
	JNB TF0,$		;BAO TRAN
	CLR TR0
	CLR TF0
	;SAU 500us CO BAO TRAN HOAT DONG, RESET LAI QUA TRINH
	RET
END
